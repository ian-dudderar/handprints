<div class="custom-gallery">
  {% for image in product.images %}
    <img src="{{ image.src | img_url: 'medium' }}" alt="{{ image.alt }}" class="gallery-image">
  {% endfor %}
</div>

<style>
  .custom-gallery {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
  }
  .gallery-image {
    width: 30%;
    cursor: pointer;
    transition: transform 0.3s ease-in-out;
  }
  .gallery-image:hover {
    transform: scale(1.1);
  }
</style>

