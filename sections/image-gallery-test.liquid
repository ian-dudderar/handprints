{%- style -%}
   .body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        background-color: #f0f0f0;
    }

    .gallery-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .gallery {
        column-count: 3;
        column-gap: 20px;
    }

    .gallery-item {
        break-inside: avoid;
        margin-bottom: 20px;
        overflow: hidden;
        border-radius: 8px;
        transition: 1s ease;

    }

    .gallery-item img {
        width: 100%;
        height: auto;
        display: block;
        cursor: pointer;
        transition: 1s ease;
    }

    @media (min-width: 768px) {
      /* .gallery-item img:hover {
        transform: scale(0.9);
        box-shadow: 0 32px 75px rgba(68, 77, 136, 0.2);
      } */
      .gallery-item:hover {
        transform: scale(0.9);
        box-shadow: 0 32px 75px rgba(68, 77, 136, 0.2);
      }
    }

    @media (max-width: 768px) {
        .gallery {
            column-count: 2;
        }

        
    }

    @media (max-width: 480px) {
        .gallery {
            column-count: 1;
        }
    }

    
{%- endstyle -%}




<div class="gallery-container">
    <div class="gallery" id="imageGallery">
      {% for block in section.blocks %}
				{% if block.settings.image %}
					<div class="gallery-item">
            <img src="{{ block.settings.image | img_url : 'large'}}" alt="Image">
          </div>
				{% else %}
					<p>No image selected</p>
				{% endif %}
		{% endfor %}
    </div>
</div>

